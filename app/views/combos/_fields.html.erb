

<% content_for(:javascript) do %>
  <%= javascript_include_tag "combo_edit" %>
  <%= javascript_include_tag "submit_link" %>
<% end %>
<% content_for :title do %><%= heading %><% end %>
<% content_for :actions do %>
	<% if current_user.has_rights(['admin','compras','gerente']) %>
		<dt><%= link_to_function 'Guardar', 'submit("combo_form")', :class => 'action' %></dt>
		<% if mode == 'edit' %>
			<dt> <%= link_to 'Remover', :class => 'action', :controller => "combos", :action => "delete", :confirm => 'Esta seguro?', :method => :delete %> </dt>
		<% end %>
  <% end %>
  <dt><%= link_to 'Lista', combos_path, :class => 'action' %></dt>  
  <dt> <%= link_to 'Cancelar', combo_path(@combo), :class => 'action' %> </dt>
<% end %>
<%= error_messages_for :combo %>
		
	  <%= f.hidden_field :unit_id, :value => 1 %>
	  <%= f.hidden_field :product_type_id, :value => 3 %>
	  
	<div class="column2-unit-left">
		<p>
		  <b>Nombre</b><br />
		  <%= f.text_field :name, :class => 'field' %>
		</p>
		 <p>
		  <b>Precio Fijo</b><br />
		  <%= f.text_field :static_price, :class => 'field' %>
		</p>
		<p><b>Catagor√≠a</b><br />
		<%= f.text_field :category_name, :class=> 'lookup field', :id => 'category_lookup',:style=>'width:247px;' %>
		</p>
		
	</div>
	<div class="column2-unit-right">
		
	<p>
	  <b>Codigo UPC</b><br />
	  <%= f.text_field :upc, :class => 'field' %>
	</p>

		 <p>
		  <b>Precio Relativo</b><br />
		  <%= f.text_field :relative_price, :class => 'field' %>
		</p>
		<p>
		  <b>Costo</b><br />
		  <%= f.text_field :cost, :class => 'field' %>
		</p>
		
	</div>
	
	<hr class="clear-contentunit" />
	<div>			
		<div class="table_header_row">
			<div class="table_cell_20">Nombre de Producto</div>
			<div class="table_cell_10">Cantidad</div>
			<div class="table_cell_10">Precio Fijo</div>
			<div class="table_cell_10">Precio Relativo</div>
			<div class="table_cell">Acciones </div>
		</div>
		<div id="requirements">
			<%= render :partial => 'requirement', :collection => @combo.requirements %>
		</div>
		<div id="requirements_errors"></div>
	</div>
	
	
  
