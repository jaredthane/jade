<% content_for :title do %>Lista de Precios<% end %>

<h2>
	<div class="table_cell_50">Mostrando Productos de: <%= current_user.current_price_group.entity.name %></div>
	<div class="table_cell" align="right">Con precios del grupo: <%= current_user.current_price_group.price_group_name.name %></div>
</h2>

<% form_for :@prices, :url => {:action => 'update'}, id => 1 do |f| %>
<div>
  <div id="lines" class="table_header_row">
		  <div class="table_cell_35">Nombre</div>
		  <div class="table_cell_10">Costo</div>
		  <div class="table_cell_10">Precio Actual</div>
		  <div class="table_cell_10">Precio Fijo</div>
		  <div class="table_cell_10">Precio Relativo</div>
		  <div class="table_cell">Disponible</div>
		</div>
		<div id="lines">
			<%= render :partial => 'line', :collection => @prices %>
		</div>
	</div>
	<%= submit_tag "Guardar Cambios | ", :class => 'action' %>
	<%= link_to "Limpiar", prices_url, :class => 'action' %>
	<br />
	<%= will_paginate @prices, :class => 'pagination' %>
<% end %>
<br />

