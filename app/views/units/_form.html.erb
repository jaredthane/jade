
<% content_for :title do %><%= heading %><% end %>
<% content_for :actions do %>
	<% if mode=='edit' %>
		<li><%= link_to 'Remover', @unit, :confirm => 'Esta seguro?', :method => :delete, :class => 'action' %></li>
	<% end %>
	<li><%= link_to 'Cancelar', units_path, :class => 'action' %></li>
<% end %>

<%= error_messages_for :unit %>

<% form_for(@unit) do |f| %>
  <p>
    <b>Nombre</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit button_text, :class => 'action' %>
  </p>
<% end %>


