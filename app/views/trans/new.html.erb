<% content_for(:javascript) do %>
  <%= javascript_include_tag "submit_link" %>
<% end %>
<% content_for :title do %>Registrar Nueva Transacción<% end %>
<% content_for :actions do %>
	<dt><%= link_to_function 'Guardar', 'submit("trans_form")', :class => 'action' %></dt>
<% end %>

<%= error_messages_for :trans %>
<% form_tag create_transaction_url, :id => 'trans_form' do %>
<br />
	<div class="column2-unit-left">
		<p>
			<b>Descripción</b>
			<%= text_field_tag :comments, '', :class => 'field' %>
		</p>
	</div>
	<div class="column2-unit-right">

	</div>
	<hr class="clear-contentunit" />
	<h1>Cuentas</h1>
	<div>
	  <div class="table_header_row">
		  <div class="table_cell_30">Cuenta</div>
		  <div class="table_cell_10">Tipo</div>
		  <div class="table_cell">Valor</div>
	  </div>
	<div id="posts">
	  <div class="table_row">
	    <div class="table_cell_30"><%= select_tag("post[][account_id]", options_for_select(@accounts, 'name'), {:include_blank => true}) %></div>
	    <div class="table_cell_30"><%= select_tag("post[][tipo]", options_for_select(@accounts, 'name'), {:include_blank => true}) %></div>
	  </div>
	  
	</div>
<% end %>

