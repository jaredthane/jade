
<% content_for :title do %>Lista de Cuentas<% end %>
<% content_for :actions do %>
	<dt><%= link_to 'Cuenta Nuevo', new_account_path, :class => 'action' %></dt>
<% end %>

<br />
<%= will_paginate @accounts, :class => 'pagination' %>
<div>
  <div class="table_header_row">
    <div class="table_cell_25">Numero</div>
    <div class="table_cell_25">Nombre</div>
    <div class="table_cell_25">Rama</div>
    <div class="table_cell">Entidad</div>
  </div>


<% for account in @accounts %>
  <div class="table_row">
    <div class="table_cell_25"><%= link_to account.number, account %></div>
  	<div class="table_cell_25"><%= link_to account.name, account %></div>
    <div class="table_cell_25">
  		<% if account.parent %>
	    	<%= link_to account.parent.name, account.parent %>
	    <% end %>
	  </div>
  	<div class="table_cell"><%= link_to account.entity.name, account.entity %></div>
	</div>
<% end %>
</div>
<br />
<%= will_paginate @accounts, :class => 'pagination' %>

