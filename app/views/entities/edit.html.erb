<% case @entity.entity_type_id
	when 1 %>
		<% content_for :title do %>Cambiar Proveedor <%= @entity.name %> #<%= @entity.id %><% end %>
	<% when 2 %>
		<% content_for :title do %>Cambiar Consumidor Final <%= @entity.name %> #<%= @entity.id %><% end %>
	<% when 3 %>
		<% content_for :title do %>Cambiar Sitio <%= @entity.name %> #<%= @entity.id %><% end %>
	<% when 5 %>
		<% content_for :title do %>Cambiar Cliente de Credito Fiscal <%= @entity.name %> #<%= @entity.id %><% end %>
	<% else %>
		<% content_for :title do %>Cambiar Entidad <%= @entity.name %> #<%= @entity.id %><% end %>
<% end %>

<% for error in @entity.errors %>
	<p class="error_message">
		<%= error[0] %> <%= error[1] %>
	</p>
<% end %>

<% form_for :entity, :url => entity_path(@entity), :html => {:id => 'entity_form', :method => 'put' } do |f| %>
  <%= render :partial => 'fields', :locals => { :f => f, :mode => 'edit'} %>
<% end %>
