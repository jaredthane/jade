<% case @entity.entity_type_id
	when 1 %>
		<% content_for :title do %>Nuevo Proveedor <% end %>
	<% when 2 %>
		<% content_for :title do %>Nuevo Consumidor Final<% end %>
	<% when 3 %>
		<% content_for :title do %>Nuevo Sitio<% end %>
	<% when 5 %>
		<% content_for :title do %>Nuevo Cliente de Credito Fiscal<% end %>
	<% else %>
		<% content_for :title do %>Nueva Entidad<% end %>
<% end %>
<%= error_messages_for :entity %>

<% form_for @entity, :html => {:id => 'entity_form' } do |f| %>
  <%= render :partial => 'fields', :locals => { :f => f, :mode =>'new' } %>
<% end %>
