<% content_for :title do %>Cambiar Plantilla de Reporte<% end %>
<% content_for(:javascript) do %>
  <%= javascript_include_tag "submit_link" %>
<% end %>
<% content_for :actions do %>
    <li><%= link_to_function 'Guardar', 'submit("report_form")', :class => 'action' %></li>
	<li><%= link_to 'Cancelar', report_templates_path, :class => 'action' %></li>
<% end %>

<%= error_messages_for :report %>

<% form_for(@report, :html => {:id => 'report_form'}) do |f| %>
    <p>
    <b>Reporte</b><br />
    <%= h @report.name %>
    </p>
    <p>
    <b>Plantilla:</b><br />
    <%= f.text_area :content, :style=>'width:90%;' %>
    </p>
    <p>
	    <b>Fondo</b><br />
	    <%= f.file_field :background, :size=>20 %>
    </p>
<% end %>
