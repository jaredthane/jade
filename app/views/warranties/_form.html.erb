<% content_for(:javascript) do %>
  <%= javascript_include_tag "submit_link" %>
<% end %>
<% content_for :title do %><%= heading %><% end %>
<% content_for :actions do %>
<% if mode == 'edit' %>
		<dt><%= link_to 'Ver', @warranty, :class => 'action' %></dt>
		<dt><%= link_to 'Remover', @warranty, :confirm => 'Esta seguro?', :method => :delete, :class => 'action' %></dt>
	<% end %>
	<dt><%= link_to 'Lista', warranties_path, :class => 'action' %></dt>
	<dt><%= link_to_function 'Guardar', 'submit("warranty_form")', :class => 'action' %></dt>
<% end %>

<%= error_messages_for :warranty %>

<% form_for(@warranty, :html => {:id => 'warranty_form' }) do |f| %>

	<div class="column2-unit-left">
		<p>
			<b>Producto</b>
			<%= text_field_with_auto_complete :warranty, :product_name, 
					{:class => 'field', :size=>30 }, 
					{:url => '/products.js', :skip_style=>1, :method => :get, :param_name => 'search' } %>
		</p>
		<p>
		  <b>Duraci√≥n en Meses</b><br />
		  <%= f.text_field :months, :class => 'field' %>
		</p>
	</div>
	<div class="column2-unit-right">

		<p>
			<b>Precio</b>
			<%= f.text_field :price, :class => 'field' %>
		</p>

	</div>
	<hr class="clear-contentunit" />
	
<% end %>

