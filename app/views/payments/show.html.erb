<% content_for :title do %>Detalles de Pago<% end %>
<div class="column2-unit-left">
<p>
  <b>Numero de Pedido:</b>
  <%=link_to @payment.order.id, @payment.order %>
</p>

<p>
  <b>Cantidad Presentado:</b>
  <%=h number_to_currency(@payment.presented) %>
</p>
<p>
  <b>Vuelto:</b>
  <%=h number_to_currency(@payment.returned) %>
</p>
<p>
  <b>Total Cancelado:</b>
  <%=h number_to_currency(@payment.amount) %>
</p>

</div>
<div class="column2-unit-right">
<p>
  <b>Usuario:</b>
  <%=link_to @payment.user.login,@payment.user %>
</p>
<p>
  <b>Fecha:</b>
  <%=h @payment.created_at.to_s(:long) %>
</p>
<p>
  <b>Metodo:</b>
  <%=h @payment.payment_method.name %>
</p>

</div>
<hr class="clear-contentunit" />






<%= link_to 'Cambiar', edit_payment_path(@payment), :class => 'action' %> |

<%= link_to 'Facturar | ', show_receipt_path(:order_id => @payment.order.id), :class => 'action' %>
<%= link_to 'Lista de Pagos', payments_path, :class => 'action' %>
