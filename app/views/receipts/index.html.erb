<% content_for(:javascript) do %>
  <%= javascript_include_tag "submit_link" %>
<% end %>
<% content_for :title do %>Lista de Facturas<% end %>
<% content_for :actions do %>
	<dt><%= link_to_function 'Actualizar', 'submit_index("date_form")', :class => 'action' %></dt>
	<dt><%= link_to_function 'Reporte', 'submit_report("date_form")', :class => 'action' %></dt>
	<dt><%= link_to 'Lista para Imprimir', receipts_list_to_print_url(:till=>@till, :from=>@from) %></dt>
	<dt> <%= link_to 'Lista de Ventas', sales_url, :class => 'action' %>  </dt>
<% end %>
<% form_tag receipts_path, :method =>'get', :id => 'date_form' do %>
	<div class="column2-unit-left">
		<p>
		  <b>Desde</b><br />
    	<%= calendar_date_select_tag "from", @from, :time => false, :year_range => 10.years.ago..0.years.ago, :size=>20, :class => 'field' %>
		</p>
   </div>
   <div class="column2-unit-right">
   	<p>
   		<b>Hasta</b><br />
   		<%= calendar_date_select_tag "till", @till, :time => false, :year_range => 10.years.ago..0.years.ago, :size=>20, :class => 'field' %>
   	</p>
   </div>
	<div class="checkbox-list">
		<% get_sites.each do |site| -%>
			<%= check_box_tag "sites[]", site.id, @sites.include?(site.id.to_s) -%> <%= site.name -%>
		<% end -%>
	</div>
	<%= hidden_field_tag 'index',true %>
<% end %>
<% if @consumidor_final_today.length >0 %>
	<hr class="clear-contentunit" />
  <h1> Facturas de Consumidor Final</h1> 
  <p><b><%= link_to 'Todos para imprimir', consumidor_final_today_url %></b></p>
  <%= will_paginate @consumidor_final_today, :class => 'pagination' %>
  <div>
    <div class="table_header_row">
		  <div class="table_cell_15">Fecha</div>
	    <div class="table_cell_20">Cliente</div>
	    <div class="table_cell_10">Venta</div>
	    <div class="table_cell_15">Factura</div>
	    <div class="table_cell_15">Total</div>
	    <div class="table_cell_10">Usuario</div>
	    <div class="table_cell">Acciones</div>
	  </div>
    <% for receipt in @consumidor_final_today %>
      <div class="table_row">
    	<% if receipt.deleted %><div class="strikethrough"><% end %>
        <div class="table_cell_15"><%= h receipt.created_at.to_date.to_s(:long) %></div>
        <div class="table_cell_20"><%= link_to receipt.order.client.name, receipt.order.client %></div>
        <div class="table_cell_10"><%= link_to receipt.order_id, receipt.order %></div>
        <div class="table_cell_15"><%= link_to "%05d" % receipt.number, receipt %></div>
        <div class="table_cell_15"><%= h number_to_currency(receipt.total_price_with_tax) %></div>
        <div class="table_cell_10"><%=link_to receipt.user.name, receipt.user %></div>
        <div class="table_cell"><%=link_to "Cambiar", edit_receipt_path(receipt) %></div>
	    </div>
	    <% if receipt.deleted %></div><% end %>
    <% end %>
  </div>
	<%= will_paginate @consumidor_final_today, :class => 'pagination' %>
<% end %>
