
<% content_for :title do %>Lista de Inventario para <%= current_user.location.name %><% end %>
<% content_for :actions do %>
	<% if current_user.has_rights(['admin','compras','gerente']) %>
		<dt><%= link_to "Generar Pedidos", '/orders/create_batch', :class => 'action' %></dt>
		<dt><%= link_to "Dar Recomendaciones", '/products/recommend_quantities?search=' + @search, :class => 'action' %></dt>
		<dt><%= link_to "Borrar Recomendaciones", '/products/clear_quantities?search=' + @search, :class => 'action' %></dt>
	<% end %>
	<dt><%= link_to "Cancelar Cambios", inventories_url, :class => 'action' %></dt>
	<dt> <%= link_to 'Lista de Productos', products_url, :class => 'action' %>  </dt>
<% end %>
	<br />

<% form_for :@inventories, :url => {:action => 'update'}, id => 1 do |f| %>
	<div>
		<div id="lines" class="table_header_row">
				<div class="table_cell_25">Nombre</div>
				<div class="table_cell_25">Proveedor</div>
				<div class="table_cell_10">Min</div>
				<div class="table_cell_10">Max</div>
				<div class="table_cell_10">Inventario</div>
				<div class="table_cell">Pedir</div>
			</div>
			<div id="lines">
				<%= render :partial => 'line', :collection => @inventories %>
			</div>
		</div>
		<%= submit_tag "Guardar Cambios", :class => 'action' %>
	</div>
<% end %>
<br />
<%= will_paginate @inventories, :class => 'pagination' %>

