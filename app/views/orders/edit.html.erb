
<% case @order.order_type
	when 'transfers' %>
		<% content_for :title do %>Cambiar Transferencia #<%= @order.id %><% end %>
	<% when 'sales' %>
		<% content_for :title do %>Cambiar Venta #<%= @order.id %><% end %>
	<% when 'purchases' %>
		<% content_for :title do %>Cambiar Compra #<%= @order.id %><% end %>
	<% when 'internal' %>
		<% content_for :title do %>Cambiar Consumo Interno #<%= @order.id %><% end %>
	<% else %>
		<% content_for :title do %>Cambiar Pedido #<%= @order.id %><% end %>
<% end %>

<%form_for @order do |f|  %>
	<%= render :partial => 'fields', :locals => { :order_type => 'all', :f => f} %>
<% end %>
<br />
<%= render :partial => 'new_line_form', :locals => { :order => @order} %>

