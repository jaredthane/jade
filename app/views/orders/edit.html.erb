
<% case @order.order_type_id
	when 4 %>
		<% content_for :title do %>Cambiar Transferencia #<%= @order.id %><% end %>
	<% when 1 %>
		<% content_for :title do %>Cambiar Venta - Factura #<%= @order.receipt_number %><% end %>
	<% when 2 %>
		<% content_for :title do %>Cambiar Compra - Factura #<%= @order.receipt_number %><% end %>
	<% when 3 %>
		<% content_for :title do %>Cambiar Consumo Interno #<%= @order.id %><% end %>
	<% else %>
		<% content_for :title do %>Cambiar Pedido #<%= @order.id %><% end %>
<% end %>
<%form_for @order, :html => {:id => 'order_form' } do |f|  %>
	<%= render :partial => 'fields', :locals => { :order_type_id => @order.order_type_id, :f => f, :mode => "edit" } %>
<% end %>
<br />
<%= render :partial => 'new_line_form', :locals => { :order => @order,:order_type_id => @order_type_id} %>

