<% content_for(:javascript) do %>
  <%= javascript_include_tag "slider.jquery" %>
  <%= stylesheet_link_tag 'ui.slider.extras' %>
  <%= javascript_include_tag "submit_link" %>
<% end %>
<% content_for :actions do %>
	<% case @order_type_id when 2 %>
		<% if current_user.has_rights(['Admin','Compras','Gerente']) %>
			<dt><%= link_to 'Nueva Compra', '/purchases/new', :class => 'action' %></dt>
		<% end %>
	<% when 3%>
		<% if current_user.has_rights(['Admin','Compras','Gerente','Ventas']) %>
			<dt><%= link_to 'Nuevo Consumo Interno', '/internal/new', :class => 'action' %></dt>
		<% end %>	
	<% when 1%>
		<% if current_user.has_rights(['Admin','Gerente','Ventas']) %>
			<dt><%= link_to 'Nueva Venta', '/sales/new', :class => 'action' %></dt>
			<dt><%= link_to_function 'Actualizar', 'submit_index("date_range_form")', :class => 'action' %></dt>
	    <dt><%= link_to_function 'Reporte', 'submit_report("date_range_form")', :class => 'action' %></dt>
			<% if current_user.has_rights(['Suscripciones','Admin']) %>
			  <dt><%= link_to 'Lista de Suscripciones', subscriptions_url %></dt>
			  <dt><%= link_to 'Anular No. de Factura', new_nul_receipt_number_url %></dt>
			<% end %>
		<% end %>
	<% when 0 %>
		<% if current_user.has_rights(['Admin','Compras','Gerente']) %>
			<dt><%= link_to 'Nueva Compra', '/purchases/new', :class => 'action' %></dt>
		<% end %>
		<% if current_user.has_rights(['Admin','Compras','Gerente','Ventas']) %>
			<dt><%= link_to 'Nuevo Consumo Interno', '/internal/new', :class => 'action' %></dt>
		<% end %>	
		<% if current_user.has_rights(['Admin','Gerente','Ventas']) %>
			<dt><%= link_to 'Nueva Venta', '/sales/new', :class => 'action' %></dt>
		<% end %>
	<% end %>
<% end %>

<% case @order_type_id when 2 %>
		<% content_for :title do %>Lista de Compras en <%= current_user.location.name %><% end %>
	<% when 1%>
		<% content_for :title do %>Lista de Ventas en <%= current_user.location.name %><% end %>
	<% when 3%>
		<% content_for :title do %>Lista de Consumos Internos de <%= current_user.location.name %><% end %>
	<% when 0 %>
		<% content_for :title do %>Lista de Pedidos en <%= current_user.location.name %><% end %>
<% end %>
<script type="text/javascript">
	$(document).ready(function(){
	  $('select#select_from, select#select_till').selectToUISlider({
				labels: 0,
			});
		//Setup	date picker
	  $.datepicker.regional['en']
	  $(".datepicker").datepicker();
	});
</script>
<% form_tag orders_path, :method =>'get', :id => 'date_range_form' do %>
  <div class="slider_bar">
    <div class="from_div">
      <b>Desde</b><br />
      <%= text_field_tag 'from', @from.to_s, :class=> 'field datepicker', :id => 'from',:style=>'width:168px;' %>
    </div>
    <div class="till_div">
   		<b>Hasta</b><br />
      <%= text_field_tag 'till', @till.to_s, :class=> 'field datepicker', :id => 'till',:style=>'width:168px;' %>
    </div>
    <%= select_tag(:select_from, options_for_select(date_selection, Date.today.to_s)) %>
    <%= select_tag(:select_till, options_for_select(date_selection, Date.today.to_s)) %>
    <% if @sites.length > 1 %>
      <div class="checkbox-list">
        <% get_sites.each do |site| -%>
          <%= check_box_tag "sites[]", site.id, @sites.include?(site.id.to_s) -%> <%= site.name -%>
        <% end -%>
      </div>
    <% else %>
      <div class="checkbox-list" style="display:none;">
        <% get_sites.each do |site| -%>
          <%= check_box_tag "sites[]", site.id, @sites.include?(site.id.to_s) -%> <%= site.name -%>
        <% end -%>
      </div>
    <% end %>
    <%= hidden_field_tag 'pdf',true %>
    <%= hidden_field_tag 'order_type_id',@order_type_id %>
  </div>
<% end %>
<br /> <%= will_paginate @orders, :class => 'pagination' %>
<div>
  <div class="table_header_row">
    <div class="table_cell_10">Numero</div>
    <div class="table_cell_20">Proveedor</div>
    <div class="table_cell_20">Cliente</div>
    <div class="table_cell_15">Esperando</div>
    <div class="table_cell_15">Última Acción</div>
    <div class="table_cell">User</div>
  </div>
	<% for order in @orders %>
		<div class="table_row">
		  <% if order.deleted %><div class="strikethrough"><% end %>
		      <div class="table_cell_10"><%= link_to (order.receipt_number||''), order %></div>
		      <div class="table_cell_20"><%= link_to order.vendor.name[0..25], order.vendor %></div>
		      <div class="table_cell_20"><%= link_to order.client.name[0..25], order.client %></div>
		      <div class="table_cell_15"><%= link_to awaiting(order), order_history_path(order)%></div> 
		      <div class="table_cell_15"><%=h last_action(order) %></div> 
		      <div class="table_cell"><%= link_to order.user.login, order.user %></div>
		  <% if order.deleted %></div><% end %>
		</div>
	<% end %>
</div>

<br />
<%= will_paginate @orders, :class => 'pagination' %>


