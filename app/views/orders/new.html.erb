
<% case @order_type_id
	when 1 %>
		<% content_for :title do %>Nueva Venta en <%= current_user.location.name %><% end %>
	<% when 2 %>
		<% content_for :title do %>Nueva Compra para <%= current_user.location.name %><% end %>
	<% when 3 %>
		<% content_for :title do %>Nuevo Consumo Interno de <%= current_user.location.name %><% end %>
	<% else %>
		<% content_for :title do %>Nuevo Pedido<% end %>
<% end %>
<%form_for :order, :url => {:action => 'create'}, :html => {:id => 'order_form' } do |f|  %>
	<%= render :partial => 'fields', :locals => { :order_type_id => @order_type_id, :f => f, :mode => "new" } %>
<% end %>
<br />
<%= render :partial => 'new_line_form', :locals => { :order_type_id => @order_type_id} %>
