<% content_for :title do %>Lista de Productos<% end %>

<% form_for :@products, :url => {:action => 'bulk_update'}, id => 1 do |f| %>
<div>
  <div id="lines" class="table_header_row">
		  <div class="table_cell_25">Nombre</div>
		  <div class="table_cell_25">Proveedor</div>
		  <div class="table_cell_10">Min</div>
		  <div class="table_cell_10">Max</div>
		  <div class="table_cell_10">Inventario</div>
		  <div class="table_cell">Order</div>
		</div>
		<div id="lines">
			<%= render :partial => 'line', :collection => @products %>
		</div>
	</div>
	<%= link_to "Generar Pedidos | ", '/orders/create_batch', :class => 'action' %>
