

<% content_for(:javascript) do %>
  <%= javascript_include_tag "discount_edit" %>
  <%= javascript_include_tag "submit_link" %>
  <%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
<% end %>
<% content_for :title do %><%= heading %><% end %>
<% content_for :actions do %>
	<li><%= link_to_function 'Guardar', 'submit("discount_form");', :class => 'action' %></li>
  <% if @mode =='edit' %>
 		<li> <%= link_to 'Remover', :class => 'action', :controller => "discounts", :action => "delete", :confirm => 'Esta seguro?', :method => :delete %> </li>
    <li><%= link_to 'Lista de Descuentos', discounts_path, :class => 'action' %></li>
    <li><%= link_to 'Cancelar', discount_url(@discount), :class => 'action' %></li>
  <% else %>
    <li><%= link_to 'Cancelar', discounts_path, :class => 'action' %></li>
  <% end %>
<% end %>
<%= error_messages_for :discount %>
		
