<% content_for :actions do %>
	<% if current_user.has_right('CREATE_DISCOUNTS') %>
		<li> <%= link_to 'Nuevo descuento', new_discount_path, :class => 'action' %> </li>
	<% end %>
<% end %>

<% content_for :title do %>Lista de Descuentos<% end %>
<h2>
	<div class="table_cell">Mostrando precios del grupo: <%= current_user.current_price_group.price_group_name.name %></div>
</h2>
<%= will_paginate @discounts, :class => 'pagination' %>
<div>
  <div class="table_header_row">
    <div class="table_cell_30">Nombre</div>
    <div class="table_cell_30">Discuento</div>
    <div class="table_cell">Upc</div>
  </div>
	<% for discount in @discounts %>
		<div class="table_row">
		  <div class="table_cell_30"><%= link_to discount.name[0..25], discount_path(discount) %></div>
		  <div class="table_cell_30"><%=h number_to_currency(discount.price) %></div>
		  <div class="table_cell"><%=h discount.show_upc %></div>
		</div>
	<% end %>
</div>

<br />
<%= will_paginate @discounts, :class => 'pagination' %>


